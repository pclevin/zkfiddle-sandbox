<project name="executor" default="help" basedir=".">
    
    <target name="run">
    	<!--
		Configurable properties
		-Dautoport=true 
		-Ddebugmsg=true 
		-Dlibpaths=C:/workspace/executor/jar_src 
		-Dport=10015 
		-DremoteResourceHost=http://localhost:8088 
		-DpingRemoteInterval=10000
		-DlocalHostName="http://sandbox.local"
		-->
        <java classname="org.zkoss.fiddler.executor.server.FiddleInstanceServer"
		fork="true">
            <sysproperty key="autoport"
             value="true"
            />
            <sysproperty key="debugmsg"
             value="true"
            />
            <sysproperty key="libpaths"
             value="C:/workspace/executor/jar_src"
            />
            <classpath>
                <fileset dir="target/dependency">
                    <include name="**/*.jar"/>
                </fileset>
            </classpath>
        </java>
    </target>
    
</project>
